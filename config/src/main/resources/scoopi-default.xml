<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <scoopi>
        <propertyPattern>scoopi/properties/property</propertyPattern>

        <defs>
            <dir>/defs/examples/fin/jsoup/quickstart</dir>
            <defaultStepsFile>/steps-default.yml</defaultStepsFile>
            <defaultSteps>jsoupDefault</defaultSteps>
            <definedSchema>/schema/defs-defined.json</definedSchema>
            <effectiveSchema>/schema/defs-effective.json
            </effectiveSchema>
        </defs>

        <fact>
            <replaceBlank>true</replaceBlank>
            <replaceWith>-</replaceWith>
        </fact>

        <seederClass>
            <![CDATA[
              org.codetab.scoopi.step.extract.LocatorSeeder
            ]]>
        </seederClass>
        <poolsize>
            <start>4</start>
            <seeder>6</seeder>
            <loader>4</loader>
            <parser>4</parser>
            <process>4</process>
            <filter>4</filter>
            <appender>2</appender>
        </poolsize>
        <appender>
            <queuesize>4096</queuesize>
        </appender>
        <webClient>
            <timeout>120000</timeout>
            <userAgent>
              <![CDATA[
                Mozilla/5.0 (X11\; Linux x86_64\; rv:50.0) Gecko/20100101 Firefox/50.0
              ]]>
            </userAgent>
        </webClient>
        <webDriver>
            <driverPath>.gecko/geckodriver</driverPath>
            <log>geckodriver.log</log>
            <waitType>explicit</waitType>
            <timeout>
                <explicitWait>10</explicitWait>
                <implicitWait>10</implicitWait>
            </timeout>
        </webDriver>
        <highDate>31-12-2037 23:59:59.999</highDate>
        <dateParsePattern>dd-MM-yyyy ; dd/MM/yyyy</dateParsePattern>
        <dateTimeParsePattern>
            <![CDATA[
                 dd-MM-yyyy HH:mm:ss.SSS ; dd/MM/yyyy HH:mm:ss.SSS
            ]]>
        </dateTimeParsePattern>
        <wait>false</wait>
        <fork>
            <locator>0</locator>
        </fork>
        <useDatastore>true</useDatastore>
        <datastore>
            <name>datastore</name>
            <orm>jdo</orm>
            <configFile>jdoconfig.properties</configFile>
        </datastore>
        <persist>
            <dataDef>true</dataDef>
            <locator>true</locator>
            <data>true</data>
        </persist>
        <cluster>
            <enable>false</enable>
            <jobQueueSize>4</jobQueueSize>
            <datasource>
                <driver>org.apache.ignite.IgniteJdbcThinDriver
                </driver>
                <url>jdbc:ignite:thin://127.0.0.1:10800..10900
                </url>
                <sqlRetry>4</sqlRetry>
            </datasource>
        </cluster>
        <metrics>
            <server>
                <enable>true</enable>
                <port>9010</port>
            </server>
        </metrics>
    </scoopi>
</configuration>
