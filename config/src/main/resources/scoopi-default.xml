<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <scoopi>
        <propertyPattern>scoopi/properties/property</propertyPattern>

        <defs>
            <dir>/defs/examples/fin/jsoup/quickstart</dir>
            <defaultStepsFile>/steps-default.yml</defaultStepsFile>
            <defaultSteps>jsoupDefault</defaultSteps>
            <definedSchema>/schema/defs-defined.json</definedSchema>
            <effectiveSchema>/schema/defs-effective.json
            </effectiveSchema>
        </defs>

        <fact>
            <replaceBlank>true</replaceBlank>
            <replaceWith>-</replaceWith>
        </fact>

        <seeder>
            <class>
            <![CDATA[
              org.codetab.scoopi.step.extract.LocatorSeeder
            ]]>
            </class>
        </seeder>
        <poolsize>
            <start>4</start>
            <seeder>6</seeder>
            <loader>4</loader>
            <parser>4</parser>
            <process>4</process>
            <filter>4</filter>
            <appender>2</appender>
        </poolsize>
        <appender>
            <queuesize>4096</queuesize>
        </appender>
        <webClient>
            <timeout>120000</timeout>
            <userAgent>
              <![CDATA[
                Mozilla/5.0 (X11\; Linux x86_64\; rv:50.0) Gecko/20100101 Firefox/50.0
              ]]>
            </userAgent>
        </webClient>
        <webDriver>
            <driverPath>.gecko/geckodriver</driverPath>
            <log>geckodriver.log</log>
            <waitType>explicit</waitType>
            <timeout>
                <explicitWait>10</explicitWait>
                <implicitWait>10</implicitWait>
            </timeout>
        </webDriver>
        <highDate>31-12-2037 23:59:59.999</highDate>
        <dateParsePattern>dd-MM-yyyy ; dd/MM/yyyy</dateParsePattern>
        <dateTimeParsePattern>
            <![CDATA[
                 dd-MM-yyyy HH:mm:ss.SSS ; dd/MM/yyyy HH:mm:ss.SSS
            ]]>
        </dateTimeParsePattern>
        <outputDirTimestampPattern>
            <![CDATA[
                 ddMMMyyyy-HHmmss
            ]]>
        </outputDirTimestampPattern>
        <wait>false</wait>
        <fork>
            <locator>0</locator>
        </fork>
        <useDatastore>true</useDatastore>
        <datastore>
            <type>jar:file:</type>
            <path>data</path>
        </datastore>
        <persist>
            <locator>true</locator>
            <data>true</data>
        </persist>
        <cluster>
            <enable>false</enable>
            <tx>
                <timeout>10</timeout>
                <timeoutUnit>SECONDS</timeoutUnit>
                <type>TWO_PHASE</type>
            </tx>
            <shutdown>
                <timeout>60</timeout>
                <timeoutUnit>SECONDS</timeoutUnit>
            </shutdown>
        </cluster>
        <job>
            <takeLimit>4</takeLimit>
            <takeTimeout>1000</takeTimeout>
            <takeRetryDelay>50</takeRetryDelay>
        </job>
        <task>
            <takeTimeout>500</takeTimeout>
        </task>
        <monitor>
            <timerPeriod>1000</timerPeriod>
        </monitor>
        <metrics>
            <server>
                <enable>true</enable>
                <port>9010</port>
            </server>
            <serializer>
                <period>5</period>
            </serializer>
        </metrics>
        <shutdown>
            <timeout>10</timeout>
            <timeoutUnit>SECONDS</timeoutUnit>
        </shutdown>
    </scoopi>
</configuration>
