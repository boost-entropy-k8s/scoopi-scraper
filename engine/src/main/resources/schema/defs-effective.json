{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "Scoopi Defs JSON schema",
	"_comment": "effective defs is same as defined with these constraints",
	"_commentDataDefNode": "required facts dim",
	"_commentTaskNode": "no steps name only normalized steps",
	"_commentStepsNode": "normalized steps and not recursive",
	"type": "object",
	"properties": {
		"locatorGroups": {
			"$ref": "#/locatorDefs/locatorGroupsNode"
		},
		"taskGroups": {
			"$ref": "#/taskDefs/taskGroupsNode"
		},
		"steps": {
			"$ref": "#/stepsDefs/stepsNode"
		},
		"dataDefs": {
			"$ref": "#/dataDefDefs/dataDefsNode"
		}
	},
	"additionalProperties": false,
	"required": [
		"locatorGroups",
		"taskGroups",
		"dataDefs",
		"steps"
	],
	"locatorDefs": {
		"locatorGroupsNode": {
			"type": "object",
			"patternProperties": {
				"^.+$": {
					"$ref": "#/locatorDefs/locatorsNode"
				}
			}
		},
		"locatorsNode": {
			"type": "object",
			"properties": {
				"locators": {
					"type": "array",
					"minItems": 1,
					"uniqueItems": true,
					"items": {
						"$ref": "#/locatorDefs/locatorNode"
					}
				}
			},
			"additionalProperties": false,
			"required": [
				"locators"
			]
		},
		"locatorNode": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string",
					"minLength": 1
				},
				"url": {
					"type": "string",
					"minLength": 1
				}
			},
			"additionalProperties": false,
			"required": [
				"name",
				"url"
			]
		}
	},
	"taskDefs": {
		"taskGroupsNode": {
			"type": "object",
			"patternProperties": {
				"^.+$": {
					"$ref": "#/taskDefs/taskNode"
				}
			}
		},
		"taskNode": {
			"_comment": "regex matches anything except live",
			"type": "object",
			"patternProperties": {
				"^(?!(live)$).+$": {
					"type": "object",
					"properties": {
						"dataDef": {
							"type": "string",
							"minLength": 1
						},
						"steps": {
							"$ref": "#/stepsDefs/stepsNode"
						},
						"persist": {
							"$ref": "#/taskDefs/taskPersistNode"
						}
					},
					"additionalProperties": false,
					"required": [
						"dataDef"
					]
				}
			},
			"properties": {
				"live": {
					"type": "string",
					"minLength": 1
				}
			}
		},
		"taskStepsNameNode": {
			"type": "string",
			"minLength": 1
		},
		"taskStepsOverrideNode": {
			"type": "object",
			"patternProperties": {
				"^.+$": {
					"$ref": "#/stepsDefs/stepNode"
				}
			}
		},
		"taskPersistNode": {
			"type": "object",
			"properties": {
				"data": {
					"type": "boolean"
				}
			},
			"additionalProperties": false,
			"required": [
				"data"
			]
		}
	},
	"stepsDefs": {
		"stepsNode": {
			"_comment": "for default or userdefined - top level or task steps",
			"_comment1": "normalized and not recursive",
			"type": "object",
			"patternProperties": {
				"^.+$": {
					"$ref": "#/stepsDefs/stepNode"
				}
			}
		},
		"stepNode": {
			"type": "object",
			"patternProperties": {
				"^.+$": {
					"type": "object",
					"properties": {
						"class": {
							"type": "string",
							"minLength": 1
						},
						"previous": {
							"type": "string",
							"minLength": 1
						},
						"next": {
							"type": "string",
							"minLength": 1
						},
						"plugins": {
							"$ref": "#/stepsDefs/pluginsNode"
						}
					},
					"additionalProperties": false,
					"required": [
						"class",
						"previous",
						"next"
					]
				}
			}
		},
		"pluginsNode": {
			"type": "array",
			"uniqueItems": true,
			"minItems": 1,
			"items": {
				"$ref": "#/stepsDefs/pluginNode"
			}
		},
		"pluginNode": {
			"type": "object",
			"properties": {
				"plugin": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"minLength": 1
						},
						"class": {
							"type": "string",
							"minLength": 1
						}
					},
					"required": [
						"name",
						"class"
					]
				}
			},
			"_comment": "allow other properties",
			"additionalProperties": true,
			"required": [
				"plugin"
			]
		}
	},
	"dataDefDefs": {
		"dataDefsNode": {
			"type": "object",
			"patternProperties": {
				"^.+$": {
					"$ref": "#/dataDefDefs/dataDefNode"
				}
			}
		},
		"dataDefNode": {
			"type": "object",
			"properties": {
				"query": {
					"$ref": "#/dataDefDefs/queryNode"
				},
				"items": {
					"$ref": "#/dataDefDefs/itemsNode"
				},
				"dims": {
					"$ref": "#/dataDefDefs/dimsNode"
				},
				"facts": {
					"$ref": "#/dataDefDefs/factsNode"
				}
			},
			"additionalProperties": false,
			"required": [
				"query",
				"items",
				"facts"
			]
		},
		"queryNode": {
			"type": "object",
			"properties": {
				"block": {
					"type": "string",
					"minLength": 1
				},
				"selector": {
					"type": "string",
					"minLength": 1
				}
			},
			"additionalProperties": false,
			"required": [
				"block"
			]
		},
		"itemsNode": {
			"type": "array",
			"uniqueItems": true,
			"minItems": 1,
			"items": {
				"$ref": "#/dataDefDefs/itemNode"
			}
		},
		"dimsNode": {
			"type": "array",
			"uniqueItems": true,
			"minItems": 1,
			"items": {
				"$ref": "#/dataDefDefs/itemNode"
			}
		},
		"factsNode": {
			"type": "array",
			"uniqueItems": true,
			"minItems": 1,
			"items": {
				"$ref": "#/dataDefDefs/itemNode"
			}
		},
		"itemNode": {
			"type": "object",
			"properties": {
				"item": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"minLength": 1
						},
						"selector": {
							"type": "string",
							"minLength": 1
						},
						"script": {
							"type": "string",
							"minLength": 1
						},
						"match": {
							"type": "string",
							"minLength": 1
						},
						"index": {
							"type": "number"
						},
						"indexRange": {
							"type": "string",
							"minLength": 1
						},
						"breakAfter": {
							"type": "array",
							"minItems": 1,
							"uniqueItems": true,
							"items": [
								{
									"type": "string"
								}
							]
						},
						"order": {
							"type": "number"
						},
						"value": {
							"type": "string",
							"minLength": 1
						},
						"filters": {
							"type": "array",
							"uniqueItems": true,
							"minItems": 1,
							"items": {
								"$ref": "#/dataDefDefs/filterNode"
							}
						},
						"linkGroup": {
							"type": "string",
							"minLength": 1
						},
						"linkBreakOn": {
							"type": "array",
							"minItems": 1,
							"uniqueItems": true,
							"items": [
								{
									"type": "string"
								}
							]
						},
						"prefix": {
							"type": "array",
							"minItems": 1,
							"uniqueItems": true,
							"items": [
								{
									"type": "string"
								}
							]
						}
					},
					"additionalProperties": false,
					"required": [
						"name"
					]
				}
			},
			"required": [
				"item"
			]
		},
		"filterNode": {
			"type": "object",
			"properties": {
				"filter": {
					"type": "object",
					"properties": {
						"type": {
							"type": "string",
							"minLength": 1
						},
						"pattern": {
							"type": "string"
						}
					},
					"additionalProperties": false,
					"required": [
						"type",
						"pattern"
					]
				}
			},
			"required": [
				"filter"
			]
		}
	}
}
